<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogTextView">
        <item name="android:layout_marginBottom">@dimen/_8sdp</item>
        <item name="android:layout_marginRight">@dimen/_8sdp</item>
        <item name="android:layout_marginLeft">@dimen/_8sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/_13sdp</item>
        <item name="android:textColor">@color/text_color_3</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DialogButton">
        <item name="android:layout_marginBottom">@dimen/_8sdp</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="android:layout_marginLeft">@dimen/_8sdp</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/_14sdp</item>
        <item name="android:paddingTop">@dimen/_11sdp</item>
        <item name="android:textColor">@color/text_color_3</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="textview_style_default" parent="AppTheme">
        <item name="android:textColor">@color/text_color_3</item>
    </style>

    <style name="search_result_header_tv_style" parent="textview_style_default">
        <item name="android:textSize">@dimen/header_text_size</item>
    </style>

    <style name="button_normal">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:drawablePadding">@dimen/_9sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="row_tv_style" parent="textview_style_default">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="details_section_header_text_style">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/text_color_3</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_marginBottom">@dimen/_7sdp</item>

    </style>

</resources>
